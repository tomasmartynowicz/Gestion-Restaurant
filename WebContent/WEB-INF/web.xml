<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
	http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>GestionRestaurant</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>ControladorTraerSalones</servlet-name>
		<servlet-class>controladores.ControladorTraerSalones</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ControladorTraerSalones</servlet-name>
		<url-pattern>/TraerSalones</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ControladorTraerMesas</servlet-name>
		<servlet-class>controladores.ControladorTraerMesas</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ControladorTraerMesas</servlet-name>
		<url-pattern>/TraerMesas</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ControladorCrearMesa</servlet-name>
		<servlet-class>controladores.ControladorCrearMesa</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ControladorCrearMesa</servlet-name>
		<url-pattern>/CrearMesa</url-pattern>
	</servlet-mapping>
	
</web-app>